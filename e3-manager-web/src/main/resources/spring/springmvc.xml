<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 加载配置文件 -->
    <context:property-placeholder location="classpath:cfg.properties"/>

    <!-- 扫描组件 -->
    <context:component-scan base-package="jit.wxs.manager.web"/>

    <!-- 注解驱动 -->
    <mvc:annotation-driven />

    <!-- 加载静态资源，不开启会被拦截 -->
    <mvc:default-servlet-handler />

    <!-- 配置多媒体解析器 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="defaultEncoding" value="UTF-8" />
        <!-- 文件上传最大值 5MB -->
        <property name="maxUploadSize" value="5242880"/>
    </bean>

    <!-- 视图解析器 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <!-- 引用dubbo服务 -->
    <!-- 使用方应用信息，用于计算依赖关系 -->
    <dubbo:application name="e3-manager-web"/>
    <!-- 指定zookeeper的地址，集群用逗号分隔 -->
    <dubbo:registry protocol="zookeeper" address="${zookeeper.address}"/>
    <!-- 申明要访问的接口，并创建代理对象，注入bean，名为id的值 -->
    <!-- 注册于e3-manager -->
    <dubbo:reference interface="jit.wxs.manager.service.TbItemService" id="tbItemService" />
    <dubbo:reference interface="jit.wxs.manager.service.TbItemDescService" id="tbItemDescService"/>
    <dubbo:reference interface="jit.wxs.manager.service.TbItemCatService" id="tbItemCatService" />
    <dubbo:reference interface="jit.wxs.manager.service.TbItemParamService" id="tbItemParamService" />
    <dubbo:reference interface="jit.wxs.manager.service.TbItemParamItemService" id="rbItemParamItemService" />
    <!-- 注册于e3-content -->
    <dubbo:reference interface="jit.wxs.content.service.TbContentService" id="tbContentService" />
    <dubbo:reference interface="jit.wxs.content.service.TbContentCategoryService" id="tbContentCategoryService" />
    <!-- 注册于e3-search -->
    <dubbo:reference interface="jit.wxs.search.service.SearchItemService" id="searchItemService" />

</beans>